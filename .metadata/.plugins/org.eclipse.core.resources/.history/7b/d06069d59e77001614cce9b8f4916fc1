package org.conxworks.masterdata.model.jpa.geolocation;

import java.io.Serializable;
import java.util.Set;

import javax.persistence.CascadeType;
import javax.persistence.Entity;
import javax.persistence.Inheritance;
import javax.persistence.InheritanceType;
import javax.persistence.JoinColumn;
import javax.persistence.OneToMany;
import javax.persistence.Table;

import org.conxworks.core.model.JPABaseEntity;
import org.conxworks.core.model.constants.CONXPERSISTENCE;
import org.conxworks.masterdata.model.constants.CONSTANTS;
import org.conxworks.masterdata.model.jpa.commercialrecord.JPACommercialRecord;

@Entity
@Inheritance(strategy=InheritanceType.TABLE_PER_CLASS)
@Table(name=CONSTANTS.CNX_TABLE_NAME_PREFIX+CONXPERSISTENCE.CNX_TABLE_NAME_SEPARATOR
	+CONSTANTS.CNX_MODULE+CONXPERSISTENCE.CNX_TABLE_NAME_SEPARATOR
	+"country")
public class JPACountry extends JPABaseEntity implements Serializable {
	/**
	 * 
	 */
	private static final long serialVersionUID = 7103409605829512906L;

	public  static boolean defaultsCreated = false;

    private String code3;

    private String number;
    
    @OneToMany(cascade = {CascadeType.PERSIST,CascadeType.REMOVE},mappedBy="country",targetEntity=JPACountryState.class)
    private Set<JPACountryState> states = new java.util.HashSet<JPACountryState>();

	public static boolean isDefaultsCreated() {
		return defaultsCreated;
	}

	public static void setDefaultsCreated(boolean defaultsCreated) {
		JPACountry.defaultsCreated = defaultsCreated;
	}

	public String getCode3() {
		return code3;
	}

	public void setCode3(String code3) {
		this.code3 = code3;
	}

	public String getNumber() {
		return number;
	}

	public void setNumber(String number) {
		this.number = number;
	}

	public Set<JPACountryState> getStates() {
		return states;
	}

	public void setStates(Set<JPACountryState> states) {
		this.states = states;
	}
}
